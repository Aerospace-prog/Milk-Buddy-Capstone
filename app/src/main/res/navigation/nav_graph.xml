<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.milkbuddy.view.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_vendorDetailsFragment"
            app:destination="@id/vendorDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/vendorDetailsFragment"
        android:name="com.example.milkbuddy.view.VendorDetailsFragment"
        tools:layout="@layout/fragment_vendor_details" />

    <fragment
        android:id="@+id/orderTrackingFragment"
        android:name="com.example.milkbuddy.view.OrderTrackingFragment"
        tools:layout="@layout/fragment_order_tracking" />
</navigation>